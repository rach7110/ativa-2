.row-fluid
  .span4.offset4
    %h1.pagination-centered Sign In

%div
  = form_for(:session, url: sessions_path) do |f|
    .row-fluid
      .span4.offset4
        .control-group
          .controls
            = f.text_field :email, :placeholder => "email", :value => "", :class => "span12"
    .row-fluid
      .span4.offset4
        .control-group
          .controls
            = f.password_field :password, :placeholder => "password", :value => "", :class => "span12"
    .row-fluid
      .span4.offset4
        .submitbox
          .actions
            = f.submit 'Sign In', :class => "btn btn-block btn-primary btn-large"